body {
  font-family: Arial, sans-serif;
  margin: 0;
  background: #f5f5f5;
}

header, footer {
  background: #0b74de;
  color: white;
  text-align: center;
  padding: 15px;
}

main {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 15px;
  padding: 20px;
}

.card {
  background: white;
  padding: 15px;
  border-radius: 8px;
}

.in {
  color: green;
}

.out {
  color: red;
}
